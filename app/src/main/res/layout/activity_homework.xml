<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:layout_weight="0.00"
                android:gravity="center"
                android:text="과제명"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/nameedit"
                android:layout_width="533dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="과제명"
                android:inputType="textPersonName"
                android:textColor="#ffff"
                android:textColorHint="#C0BFBF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:layout_weight="0.00"
                android:gravity="center"
                android:text="마감일"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/yy_edit"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="0.04"
                android:ems="10"
                android:hint="년"
                android:inputType="number"
                android:textColor="#ffff"
                android:textColorHint="#C0BFBF" />

            <TextView
                android:id="@+id/yy_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_weight="0.00"
                android:text="년"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/mm_edit"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="0.00"
                android:ems="10"
                android:hint="월"
                android:inputType="number"
                android:textColor="#ffff"
                android:textColorHint="#C0BFBF" />

            <TextView
                android:id="@+id/mm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_weight="0.00"
                android:text="월"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/dd_edit"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="0.00"
                android:ems="10"
                android:hint="일"
                android:inputType="number"
                android:textColor="#ffff"
                android:textColorHint="#C0BFBF" />

            <TextView
                android:id="@+id/dd_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.00"
                android:text="일"
                android:textColor="#ffff"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/infoTxt"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:layout_weight="0.08"
                android:gravity="center"
                android:text="상세설명"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/infoedit"
                android:layout_width="533dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="상세설명"
                android:inputType="textPersonName"
                android:textColor="#ffff"
                android:textColorHint="#C0BFBF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="586dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/add"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:text="추가하기"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:text="취소"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewWorks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:transcriptMode="alwaysScroll" />
    </LinearLayout>
</LinearLayout>



