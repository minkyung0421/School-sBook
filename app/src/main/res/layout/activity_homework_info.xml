<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/name_t"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="114dp"
        android:text="과제명"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/de_t"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/end_t"
        android:layout_alignStart="@+id/end_t"
        android:layout_below="@+id/end_t"
        android:layout_marginTop="218dp"
        android:text="상세설명"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/end_t"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="333dp"
        android:text="마감일"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/homework_name"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/finish_time"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/end_t"
        android:layout_alignLeft="@+id/info"
        android:layout_alignStart="@+id/info"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/info"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/homework_name"
        android:layout_alignStart="@+id/homework_name"
        android:layout_below="@+id/end_t"
        android:layout_marginTop="158dp"
        android:ems="10"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="확인"
        android:layout_below="@+id/info"
        android:layout_alignLeft="@+id/de_t"
        android:layout_alignStart="@+id/de_t" />

    <Button
        android:id="@+id/btn_no"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_ok"
        android:layout_alignBottom="@+id/btn_ok"
        android:layout_alignEnd="@+id/info"
        android:layout_alignRight="@+id/info"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:onClick="onClick"
        android:text="취소" />
</RelativeLayout>